@model Mesaj

<section id="iletisim-section">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h2 class="text-center mb-2">Bize Ulaşın</h2>
                <div class="hr mb-5"></div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="row justify-content-center">
                    <!-- Sol Bölüm -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h5 class="fw-bold"><i class="fa-solid fa-phone"></i> Bizi Ara</h5>
                            <p>1 (234) 567-891, 1 (234) 987-654</p>
                        </div>
                        <div class="mb-4">
                            <h5 class="fw-bold"><i class="fas fa-map-marker-alt"></i> Konum</h5>
                            <p>ISUBÜ, Batı Yerleşkesi, Çünür Mahallesi, Isparta, Türkiye</p>
                        </div>
                        <div class="mb-4">
                            <h5 class="mb-2 fw-bold"><i class="fas fa-clock"></i> Çalışma Saatleri</h5>
                            <p class="mb-1">Pzt – Cum: 08:00 – 22:00</p>
                            <p class="mb-1">Cmt: 10:00 – 18:00</p>
                            <p class="mb-1">Paz: Kapalı</p>
                            <p class="mb-1">Resmi Tatillerde:</p>
                            <p class="mb-1"> 09:00 – 16:00</p>
                        </div>
                    </div>
                    <!-- Sağ Bölüm -->
                    <div class="col-md-6">
                        <div class="iletisim-part bg-light p-4 rounded">
                            <h5 class="mb-4 text-center fw-bold">Formu doldurun</h5>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-controller="Ogrenci" asp-action="Iletisim" class="iletisim-form" method="post">
                                <div class="mb-3">
                                    <label class="mb-1">Ad ve Soyad</label>
                                    <input asp-for="AdSoyad" class="ad-iletisim-input w-100 p-1 mb-1" type="text" placeholder="Adınızı giriniz" maxlength="18">
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="mb-1">E-posta adresi</label>
                                    <input asp-for="Eposta" class="eposta-iletisim-input w-100 p-1 mb-1" type="email" placeholder="E-posta adresi giriniz">
                                    <span asp-validation-for="Eposta" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="mb-1">Mesajınız</label>
                                    <textarea asp-for="Icerik" class="mesaj-textarea w-100 p-1" rows="4" placeholder="Mesajınız"></textarea>
                                    <span asp-validation-for="Icerik" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btnSubmit btn text-white w-100">GÖNDER</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .swal-custom-success-button {
        background-color: green !important; /* Kırmızı arka plan */
        color: white !important; /* Yazı rengini beyaz yap */
        border: none !important; /* Çerçeve olmamasını sağla */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                html: '@Html.Raw(TempData["SuccessMessage"])',
                confirmButtonText: 'Tamam',
                customClass: {
                    confirmButton: 'swal-custom-success-button'
                }
            });
        </script>
    }
}