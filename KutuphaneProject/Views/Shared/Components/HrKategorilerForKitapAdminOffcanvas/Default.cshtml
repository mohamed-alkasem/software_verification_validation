@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Kategori>

<ul class="kitap-list list-unstyled d-none mb-0">
    @foreach (var kategori in Model)
    {
        <li class="p-2">
            <a href="/Adminler/Admin/KitaplarAdmin?kategoriId=@kategori.Id" class="bg-transparent d-block border-0 w-100 text-start text-decoration-none text-secondary">
                @kategori.Ad
            </a>
        </li>
    }
</ul>
@section Scripts
{
    <script src="~/js/main.js"></script>
}
