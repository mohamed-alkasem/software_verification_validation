@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Kategori>

<ul class="kategori-list list-unstyled d-none mb-0">
    @foreach (var kategori in Model)
    {
        <li class="p-2">
            <a href="/Adminler/Admin/KategoriDuzelt?kategoriId=@kategori.Id" class="bg-transparent text-decoration-none border-0 w-100 text-start">
                @kategori.Ad
            </a>
        </li>
    }
</ul>

@section Scripts
{
    <script src="~/js/main.js"></script>
}